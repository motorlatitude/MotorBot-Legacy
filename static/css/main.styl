  & .searchIcon
    position absolute
    top 23px
    left 10px
    font-size 14px
    color rgba(255,255,255,0.2)
  & .nav
    float left
    list-style none
    margin 0
    padding 0
    margin-left 30px
    & li
      float left
      margin-top 0
      line-height 60px
      padding 0 25px
      cursor pointer
      font-size 13px
      font-weight 500
      text-transform uppercase
      color rgba(132, 137, 143, 1.00)
      &:first-child
        padding-left 50px
        border-left 1px solid rgba(132, 137, 143, 0.1)
      &:hover
        color #fff
      &.active
        box-shadow inset 0 -3px 0 rgba(0, 179, 237, 1.00)
        color #fff
  & .version
    position absolute
    bottom -45px
    right 13px
    text-align right
    line-height 40px
    color rgba(255,255,255,0.4)
    font-size 13px
    cursor pointer
  & .motorbotSelection
    position absolute
    top 15px
    right 160px
    white-space nowrap
    & .serverSelection
      float left
      position relative
      top 0
      right 0
      padding 0 10px
      color rgba(200,200,200,0.6)
      background rgba(19, 22, 26, 1.00)
      border-top-left-radius 3px
      border-bottom-left-radius 3px
      width auto
      height 30px
      line-height 30px
      z-index 10
      cursor pointer
      &:after
        content ''
        position absolute
        right -15px
        top 0
        width: 0;
        height: 0;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-left: 15px solid rgba(19, 22, 26, 1.00);
      &:before
        content ''
        position absolute
        right -16px
        top -1px
        width: 0;
        height: 0;
        border-top: 16px solid transparent;
        border-bottom: 16px solid transparent;
        border-left: 16px solid rgba(33, 40, 49, 1.00);
      &:hover
        background rgba(9, 12, 15, 1.00)
        &:after
          border-left: 15px solid rgba(9, 12, 15, 1.00);
      & .selected
        float left
        width auto
      & .options
        display none
        position absolute
        top 30px
        left 0
        width 180px
        background rgba(30, 36, 43, 1)
        margin 0
        padding 0
        list-style none
        box-shadow 0 0 10px rgba(0,0,0,0.2)
        border-bottom-left-radius 3px
        border-bottom-right-radius 3px
        overflow hidden
        z-index 1000
        &.visible
