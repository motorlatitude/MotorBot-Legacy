    background-color rgba(238, 62, 62, 1)
  & .content
    float left
    height 95px
    margin-left 25px
    width calc(100% - 175px)
    color #fff
    padding 25px 15px
    & .title
      color #fff
      display inline-block
      font-weight bold
      font-size 25px
      width 100%
      text-transform uppercase
      letter-spacing 1px
    & .description
      margin-top 15px
      color rgba(255, 255, 255, 0.6)
