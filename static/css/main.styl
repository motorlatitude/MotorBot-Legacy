          font-size 10px
          color #EC7907
    & .profileArrow
      margin-left 10px
      float right
      line-height 36px
      color rgba(83, 86, 92, 1)
    & .options
      display none
      position absolute
      top 46px
      right -5px
      width 180px
      background rgba(25, 25, 25, 1)
      margin 0
      padding 0
      list-style none
      border-bottom-right-radius 3px
      border-bottom-left-radius 3px
      overflow hidden
      z-index 1000
      &.visible
        display block
      & li
        padding 0 20px
        line-height 40px
        color #ccc
        font-size 12px
        font-weight bold
        & i
          color #aaa
        &:hover
          background #26272A
        &:last-child
          border-bottom 0 solid transparent

.errorList
  position fixed
  top 60px
  right 20px
  width 380px
  height auto
  color rgba(0, 0, 0, 0.4)
  z-index 150
  & ul
    list-style none
    margin 0
    padding 0
    width 100%
    height auto
    & li
      float left
      width calc(100% - 8px)
      margin 10px 0
      position relative
      top 0
      border-radius 3px
      overflow hidden
      background #3386D0
      cursor pointer
      margin-left 300px
      opacity 0
      animation notification_fly_in 0.8s
      animation-fill-mode forwards
      transition transform .2s
      &.warn
        background #FFD358
      &.fatal
        background #EC6159
      &:hover
        transform scale(1.02)
    & li .icon
      position absolute
      top 0
      left 0
      bottom 0
      font-size 20px
      text-align center
      width 55px
      height auto
      background $active_color
      & .iconWrapper
        position absolute
        top calc(50% - 11px)
        left calc(50% - 11px)
        width 22px
        height 22px
        text-align center
        line-height 22px
    & li.warn .icon
      background rgba(255, 197, 51, 1)
    & li.fatal .icon
      background rgba(238, 62, 62, 1)
    & li .content
      padding 18px 8px
      float left
      margin-left 60px
      height auto
      width 300px
      color rgba(0, 0, 0, 0.4)

@keyframes notification_fly_in
  0%
    margin-left 300px
    opacity 0
  100%
    margin-left 0
    opacity 1

.flexContainer
  position absolute
  top 60px
  left 0
  right 0
  bottom 75px
  width auto
  height auto
  display -webkit-flex
  display flex
  -webkit-flex-direction row
  flex-direction row
  -webkit-flex-wrap nowrap
  flex-wrap nowrap
  background #2A2D32
  opacity 0
  transition opacity 0.5s ease-in
  & .simplebar-track.horizontal
    display: none !important;

.sidebar
  -webkit-flex-basis 230px
  flex-basis 230px
  height 100%
  min-width 230px
  background #2E3136
  overflow-y scroll
  overflow-x hidden
  position relative
  & .simplebar-track.horizontal
    display: none !important;
  & .title
    font-family 'Helvetica Neue', Arial, sans-serif
    font-size 13px
    font-weight 500
    color #fff
    text-transform uppercase
    margin-left 10px
    margin-top 20px
    letter-spacing 2px
  & ul
    list-style none
    margin 0
    padding 0
    width 230px
    margin-top 5px
    margin-left -3px
    & li
      width calc(100% - 55px)
      line-height 35px
      color #aaa
      padding-left 20px
      padding-right 20px
      font-weight 500
      margin-top 2px
      font-family 'Helvetica Neue', Arial, sans-serif
      cursor pointer
      overflow hidden
      -ms-text-overflow: ellipsis
      text-overflow: ellipsis
      white-space nowrap
      border-radius 3px
      &:hover
        background #383B40
      &.active
        background $active_color
        color #fff
      &:focus
        outline none
  & .mainNav.playlistNav
    margin-bottom 70px
    &:focus
      outline none
  & .draggable-source--is-dragging
    width calc(100% - 60px)
    margin-left 10px
    border-radius 3px
    line-height 35px
    position relative
    top 0
    color: transparent
    user-select: none
    &:hover
      background transparent
    &:before
      content ''
      position absolute
      top 15px
      left 0
      right 0
      height 5px
      border-radius 3px
      background $active_color
  & .newPlaylistButton
    position absolute
    left 0
    bottom 0
    width calc(100% - 40px)
    line-height 20px
    padding 20px
    cursor pointer
    border-top 1px solid rgba(0, 0, 0, 0.1)
    font-weight 500
    color #aaa
    background #2E3136
    &:hover
      color #fff
      background #383B40

.modalityOverlay
  display none
  position absolute
  z-index 10000
  top 0
  left 0
  right 0
  bottom 0
  background rgba(20, 20, 24, 0.4)
  animation commit_fade_in 0.3s linear
  animation-fill-mode forwards

