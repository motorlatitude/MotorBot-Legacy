      position absolute
      top 0
      left 0
      width 100%
      height 100%
      cursor pointer
      opacity 0
      &:focus
        outline none
  & input.playlist_name_input
    float left
    padding 0
    width calc(100% - 195px)
    border 0 solid transparent
    border-radius 4px
    padding-left 10px
    background rgba(0, 0, 0, 0.2)
    line-height 34px
    font-size 13px
    margin-top 15px
    color #fff
    font-family 'Ubuntu', 'Open Sans', sans-serif
    &::-webkit-input-placeholder
      color #53565C
  & textarea.playlist_description_input
    width calc(100% - 205px)
    height 70px
    border-radius 4px
    padding 10px
    margin-top 15px
    background rgba(0, 0, 0, 0.2)
    border 0 solid transparent
    color #ffff
    font-family 'Ubuntu', 'Open Sans', sans-serif
    &::-webkit-input-placeholder
      color #53565C
  & .modal_footer
    position absolute
    bottom 0
    left 0
    width 100%
    height 60px
    background rgba(255, 255, 255, 0.1)
    z-index 800
    & input
      float right
      margin-top 12px
      margin-right 15px
      padding 0 30px
      background $active_color
      border 0 solid transparent
      color #fff
      font-family 'Ubuntu', 'Open Sans', sans-serif
      font-size 13px
      line-height 32px
      border-radius 4px
      cursor pointer
      &.cancel
        background #4F545C
      &:focus
        outline none
      &:active
        outline none

@keyframes zoomin
  0%
    transform scale(0)
  80%
    transform scale(1.02)
  100%
    transform scale(1)

.contentView
  -webkit-flex-basis 100%
  flex-basis 100%
  height auto
  overflow auto
  position relative
  top 0
  & .simplebar-track.horizontal
    display: none !important;
  & .contentWrapper
    padding 30px
    width calc(100% - 60px)
    height auto
    & .contentTitle
