.modal
  display none
  position absolute
  left calc(50% - 275px)
  top calc(50% - 115px)
  z-index 10001
  width 550px
  height 230px
  overflow auto
  border-radius 4px
  box-shadow 0 0 15px rgba(0, 0, 0, 0.3)
