.loader
  position absolute
  top calc(50% - 25px)
  left calc(50% - 25px)
  width 50px
  height 50px
  display none
  background #2E3136
  border-radius 50%
  box-shadow 0 0 4px rgba(0, 0, 0, 0.2)
  z-index 10000
  & .spinner
    position absolute
    top calc(50% - 9px)
    left calc(50% - 9px)
    width 18px
