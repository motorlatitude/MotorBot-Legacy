*
  -webkit-font-smoothing antialiased

$active_color = rgba(19, 112, 226, 1)
$spotify_color = #1DB954

body
html
  margin 0
  padding 0
  background #2A2D32
  color #fff
  font-family 'Ubuntu', 'Open Sans', sans-serif
  font-size 13px
  font-weight 500
  min-width 1128px
  overflow hidden

.titlebar
  position fixed
  top 0
  left 0
  right 0
  height 60px
  background #191919
  z-index 151
  -webkit-app-region drag
  & .motorbotIcon
    position absolute
    top 5px
    left 5px
    & img
      width 50px
      float left
    & .motorbot
      float left
      font-size 25px
      font-weight bold
      margin-top 8px
      margin-left 4px
      color #eee
  & .search
    float left
    margin-left 260px
    padding 0
    width 300px
    border 0 solid transparent
    border-radius 4px
    padding-left 30px
    background #26272A
    line-height 34px
    font-size 13px
    margin-top 13px
    color #fff
    &::-webkit-input-placeholder
      color #53565C
    &:focus
      outline none
  & .searchAutocomplete
    display none
    position absolute
    top 42px
    left 260px
    width 330px
    background #26272a
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
    overflow hidden
    z-index 1000
    &.visible
      display block
    & ul
      margin 0
      padding 0
      list-style none
      & li
        padding 0 20px
        line-height 40px
        color #eee
        font-size 13px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        cursor pointer
        & i
          color rgba(200,200,200,0.4)
        &.active
          background #35383C
        &:hover
          background #35383C
        &:last-child
          border-bottom 0 solid transparent
  & .searchIcon
    position absolute
    top 20px
    left 270px
    font-size 14px
    color #53565C
  & .version
    position absolute
    bottom -45px
    right 13px
    text-align right
    line-height 40px
    color rgba(255, 255, 255, 0.4)
    font-size 13px
    cursor pointer
  & .motorbotSelection
    position absolute
    top 15px
    right 210px
    white-space nowrap
    & .issue
      float left
      position relative
      top 0
      right 0
      margin-right 10px
      border-radius 2px
      padding 9px 12px
      font-family Open Sans, sans-serif
      font-weight 500
      font-size 11px
      color #fff
      background #7861ED
      border 1px solid #7861ED
      cursor pointer
      opacity 0.9
      z-index 3
      transition opacity 0.1s ease-in-out
      &:hover
        opacity 1
    & .serverSelection
      float left
      position relative
      top 0
      right 0
      padding 0 10px
      color #fff
      background #26272A
      border-top-left-radius 3px
      border-bottom-left-radius 3px
      width auto
      height 30px
      line-height 30px
      z-index 10
      cursor pointer
      & .serverRegion
        float right
        background rgba(0, 0, 0, 0.2)
        border-radius 2px
        padding 0 5px
        line-height 20px
        font-size 10px
        font-weight bold
        margin-top 5px
        margin-left 12px
        color #eee
        text-transform uppercase
      &:after
        content ''
        position absolute
        right -15px
        top 0
        width: 0;
        height: 0;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        border-left: 15px solid #26272A;
      &:before
        content ''
        position absolute
        right -17px
        top -2px
        width: 0;
        height: 0;
        border-top: 17px solid transparent;
        border-bottom: 17px solid transparent;
        border-left: 17px solid #191919;
      &:hover
        background #2A2D32
        &:after
          border-left: 15px solid #2A2D32
      & .selected
        float left
        width auto
      & .options
        display none
        position absolute
        top 30px
        left 0
        width 180px
        background rgba(25, 25, 25, 1)
        margin 0
        padding 0
        list-style none
        border-bottom-left-radius 3px
        border-bottom-right-radius 3px
        overflow hidden
        z-index 1000
        &.visible
          display block
        & li
          padding 0 20px
          line-height 40px
          color #ccc
          font-size 12px
          font-weight bold
          & i
            color #aaa
          &:hover
            background #26272A
          &:last-child
            border-bottom 0 solid transparent
    & .channelSelection
      float left
      margin-left 0
      position relative
      top 0
      padding 0 10px
      color #fff
      background #26272A
      border-radius 3px
      width auto
      height 30px
      line-height 30px
      z-index 9
      cursor pointer
      & .selected
        float left
        margin-left 15px
        width auto
        &.green
          color rgba(45, 175, 109, 1.00)
        &.yellow
          color rgba(255, 197, 51, 1.00)
      &:hover
        background #2A2D32
      & .options
        display none
        position absolute
        top 30px
        left 0
        width 180px
        background rgba(25, 25, 25, 1)
        margin 0
        padding 0
        z-index 1000
        list-style none
        border-bottom-left-radius 3px
        border-bottom-right-radius 3px
        border-top-right-radius 3px
        overflow hidden
        &.visible
          display block
        & li
          padding 0 20px
          line-height 40px
          color #ccc
          font-size 12px
          font-weight bold
          & i
            color #aaa
          &:hover
            background #26272A
          &:last-child
            border-bottom 0 solid transparent
  & .profile
