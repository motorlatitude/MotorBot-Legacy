body
html
  margin 0
  padding 0
  background rgba(23, 23, 23, 1.00)
  color #fff
  font-family Helvetica, Lucida Grande, Arial, sans-serif
  font-size 13px
  font-weight 400

.header
  width 100%
  height 165px
  background rgba(36, 36, 36, 1.00)
  background-image url('../playlistbg.png')
  background-repeat no-repeat
  background-position center
  background-size cover
  color #fff
  font-size 26px
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-weight 300
  position fixed
  top 0
  & .controls
    position absolute
    top 60px
    left 50px
  & .playing
    position absolute
    top 20px
    left 50px

#playlist
  list-style none
  margin 0
  padding 0
  width 100%
  height 100%
  & li
    float left
    width 100%
    padding 15px 10px
    cursor pointer
    background transparent
    border-bottom 1px solid rgba(36, 36, 36, 1.00)
    &:nth-child(2n)
      //background #2c323c
    &:hover
      background rgba(36, 36, 36, 1.00)
    &.titleRow
      font-weight 400
      color rgba(255,255,255,0.8)
      font-size 12px
      border-bottom 1px solid rgba(36, 36, 36, 1.00)
      position fixed
      top 120px
      left 0
      right 0
      background transparent
      &:hover
        background transparent
    &:nth-child(2)
      margin-top 167px
    & .item
      display inline-block
      width 3%
      text-align center
      & .play
        font-size 14px
    & .title
      display inline-block
      width 50%
    & .videoId
      display inline-block
      width 10%
      & a
        text-decoration none
        color inherit
    & .time
      display inline-block
      width 7%
    & .status
      display inline-block
      width 15%
    & .added
      display inline-block
      width 10%
    & .user
      display inline-block
      width 20%
    &.trackPlaying
      color rgba(103, 126, 213, 1.00) !important


.errorList
  position fixed
  top 10px
  right 10px
  width 380px
  height auto
  color rgba(0,0,0,0.4)
  z-index 10
  & ul
    list-style none
    margin 0
    padding 0
    width 100%
    height auto
    & li
      float left
      width calc(100% - 8px)
      margin 10px 0
      position relative
      top 0
      border-radius 3px
      overflow hidden
      background rgba(92, 115, 207, 1.00)
      cursor pointer
      &.fatal
        background rgba(238, 62, 62, 1.00)
      &:hover
        opacity 0.9
    & li .icon
      position absolute
      top 0
      left 0
      bottom 0
      font-size 20px
      text-align center
      width 55px
      height auto
      background rgba(255,255,255,0.2)
      & .iconWrapper
        position absolute
        top calc(50% - 11px)
        left calc(50% - 11px)
        width 22px
        height 22px
        text-align center
        line-height 22px
    & li .content
      padding 18px 8px
      float left
      margin-left 60px
      height auto
      width 300px
      color rgba(0,0,0,0.4)

#socketClose
  display none
