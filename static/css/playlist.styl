body
html
  margin 0
  padding 0
  background #282c34
  color #fff
  font-family Helvetica Neue, helvetica, Lucida Grande, Arial, sans-serif
  font-size 13px
  font-weight 400

.header
  width 100%
  height 120px
  background rgba(85, 142, 252, 1.00)
  color #fff
  font-size 26px
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  font-weight 300
  position fixed
  top 0
  & .controls
    position absolute
    top 60px
    left 50px
  & .playing
    position absolute
    top 20px
    left 50px

ul
  list-style none
  margin 0
  padding 0
  width 100%
  height 100%
  & li
    float left
    width 100%
    padding 10px
    cursor pointer
    background transparent
    &:nth-child(2n)
      background #2c323c
    &:hover
      background rgba(103, 126, 213, 1.00)
    &.titleRow
      font-weight bold
      border-bottom 1px solid rgba(255,255,255,0.2)
      position fixed
      top 120px
      left 0
      right 0
      background #282c34
      &:hover
        background #282c34
    &:nth-child(2)
      margin-top 157px
    & .item
      display inline-block
      width 2%
    & .title
      display inline-block
      width 48%
    & .videoId
      display inline-block
      width 10%
    & .time
      display inline-block
      width 10%
    & .status
      display inline-block
      width 15%
    & .user
      display inline-block
      width 15%
