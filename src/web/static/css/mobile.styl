          text-overflow ellipsis
          padding-right 10px
          padding-left 10px
          position relative
          font-size 13px
          font-weight 500
          top 0
          & .explicit
            position absolute
            right 0
            top 12px
            border 1px solid rgba(238, 62, 62, 1.00)
            border-radius 50%
            line-height 15px
            padding 0 6px 0 5px
            font-size 8px
            font-weight bold
            color rgba(238, 62, 62, 1.00)
        & .artist
          position absolute
          bottom 0
          left 0
          flex-grow 0
          width 240px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          padding-right 10px
          padding-left 10px
          color rgba(96, 102, 111, 1)
          vertical-align top
          line-height 40px
          -webkit-flex-basis 0
          flex-basis 0
        & .album
          display none
          flex-grow 1
          width 240px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          padding-right 10px
          padding-left 10px
          vertical-align top
          line-height 40px
          -webkit-flex-basis 0
          flex-basis 0
        & .timestamp
          display none
          padding-left 10px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          color rgba(96, 102, 111, 1)
          line-height 40px
          -webkit-flex-basis 0
          flex-basis 0
          & i
            margin-top 8px
        & .time
          display block
          width 70px
          padding-left 10px
          padding-right 10px
          text-align right
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          color rgba(96, 102, 111, 1)
          vertical-align top
          line-height 40px
          -webkit-flex-basis 70px
          flex-basis 70px
          &#time_header
            padding-right 20px
          & i
            margin-top 8px
      /*&:hover
        background #35383C*/
      &.active
        background transparent
        color rgba(255, 255, 255, 0.8)
        & .trackRow .item .play
          color $active_color
      &.playing
        color #0072ff !important
        & .timestamp, .time
          color #0072ff !important
